<%= content_for :toolbar do %>
  <%= content_tag :ul, class:'menu' do %>
    <%= content_tag :li, class:(current_menu == 'about' ? 'current' : '')  do %>
      <%= link_to t('user.profile.menu.about'), user_profile_path(0) %>
    <% end %>
    <%= content_tag :li, class:(current_menu == 'photos' ? 'current' : '')  do  %>
      <%= link_to t('user.profile.menu.photos'), user_photos_path %>
    <% end %>
    <%= content_tag :li, class:(current_menu == 'following' ? 'current' : '')  do %>
      <%= link_to t('user.profile.menu.following'),"#" %>
    <% end %>
    <%= content_tag :li, class:(current_menu == 'followers' ? 'current' : '')  do  %>
      <%= link_to t('user.profile.menu.followers'),"#" %>
    <% end %>
  <% end %>
<% end %>
