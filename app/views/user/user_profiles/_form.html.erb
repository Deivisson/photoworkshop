<%= semantic_form_for @user_profile do |f| %>

  <%= content_tag(:div, class:"panel",style:'width: 45%;') do %>
    <%= content_tag :h5, t('.basic_info'),class:'title' %>
    <div class="panel-content">
      <%= image_tag @user_profile.avatar.url(:thumb) , class:'user-avatar',id:'user-avatar'%>
      <div class="profile-avatar">
        <h1><%= ta UserProfile,:avatar %></h1>
        <h2><%= t(".avatar_max_size") %></h2>
        <p><%= t("labels.image_types") %></p>
        <%= f.input :avatar, 
                  label:false,
                  input_html: {:onchange => "showAvatarPreview(this)",accept:"image/*"} %>
      </div>
      <%= f.input :full_name %>            
      <%= f.input :user_name %>
      <%= f.input :home_page %>
      <%= f.input :description, input_html: {rows:5} %>
      <%= f.input :country_id,
                  as: :select,
                  collection: @countries.collect{|c|[c.name,c.id]} %>

      <%= f.input :state_id,
                  as: :select,
                  collection: @states.collect{|c|[c.name,c.id]},
                  input_html: {id:'states-select'} %>   

      <%= f.input :city_id,
                  as: :select,
                  collection: @cities.collect{|c|[c.name,c.id]},
                  input_html: {id:'cities-select'} %>                     
    </div>
  <% end %>
  <%= content_tag(:div, class:"panel",style:'width: 45%;') do %>
    <%= content_tag :h5, t('.photograph_profile'),class:'title' %>
    <div class="panel-content">
      <%= f.input :camera %>
      <%= f.input :category_id,
                  as: :select,
                  collection: @categories.collect{|c|[c.description,c.id]} %>
      <%= f.input :work,
                  :hint => t('.work_hint') %>
      <%= f.input :available_for_employment,
                  :hint => t('.available_for_employment_hint') %>
      <%= f.input :available_for_freelance,
                  :hint => t('.available_for_freelance_hint') %>
    </div>
  <% end %>
  <%= content_tag(:div, class:"panel",style:'width: 45%;') do %>
    <%= content_tag :h5, t('.social_networks'),class:'title' %>
    <div class="panel-content">
      <%= f.input :facebook %>
      <%= f.input :twitter %>
      <%= f.input :google_plus %>
      <%= f.input :tumblr %>
      <%= f.input :flickr %>
    </div>
  <% end %>

  <div class="actions">
    <%= submit_button f %>
  </div>
<% end %>
