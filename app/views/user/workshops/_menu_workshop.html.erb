<%= content_for :toolbar do %>
  <%= content_tag :ul, class:'menu' do %>
    <%= content_tag :li, class:(current_menu == 'instructor' ? 'current' : '')  do %>
      <%= link_to t('user.workshop.menu.as_instructor'), 
      						user_workshops_path(type:'instructor'),
                  id:"menu-workshop-instructor",
      						remote:true %>
    <% end %>
    <%= content_tag :li, class:(current_menu == 'student' ? 'current' : '')  do  %>
      <%= link_to t('user.workshop.menu.as_student'), 
      						user_workshops_path(type:'student'),
                  id:"menu-workshop-student",
      						remote:true %>
    <% end %>
  <% end %>
<% end %>
