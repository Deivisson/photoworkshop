<% title t('.title') %>
<%= content_for :toolbar_buttons do %>
<% end %>
<div class="show-workshop-participant">

  <div class="ws-left-col">
    <%= content_tag(:div, class:"panel flat",style:'width: 100%') do %>
      <div class="panel-content">
        <div class="ws-image" style="background-image: url(<%= @workshop.image.url(:medium)%>)"></div>
        <p class="workshop-description"><%= @workshop.description %></p>
        
        <!-- <div class="show-fields">
          <%= sf @workshop,:start_date,format_date(@workshop.start_date) %>
          <%= sf @workshop,:end_date,format_date(@workshop.end_date) %>
          <%= sf @workshop,:workload, @workshop.workload %>
          <%= sf @workshop,:target_audience %>
        </div> -->
        
        <!-- <div class="ws-complement">
          <h4><%= t('user.workshops.more_info') %></h4>
          <%= @workshop.complement.html_safe unless @workshop.complement.nil? %>
        </div> -->
      </div>
    <% end %>
    <%= content_tag(:div, class:"panel flat",style:'width: 100%;') do %>
      <div class="panel-content">
        <h4><%= t('.activities_legend') %></h4>
        <%= render "user/workshops/show_participant/activities" %>
      </div>
    <% end %>
  </div>

  <div class="ws-right-col">
    
    <%= content_tag(:div, class:"panel flat",style:'width: 100%;') do %>
      <div class="panel-content">
        <h4><%= t('.materials_legend') %></h4>
        <%= render "user/workshops/show_participant/materials" %>
      </div>
    <% end %> 

    <%= content_tag(:div, class:"panel flat",style:'width: 100%;') do %>
      <div class="panel-content">
        <h4><%= t('.participants_legend') %></h4>
          <ul class="workshop-participants">
            <% @workshop.workshop_participants.each do |participant| %>
              <%= render partial:'/user/workshop_participants/participant',
                    locals: {participant:participant, workshop_owner:false} %>
            <% end %>
          </ul>
      </div>
    <% end %> 
    
    <%= content_tag(:div, class:"panel flat",style:'width: 100%;') do %>
      <div class="panel-content">
        <h4><%= t('.author_legend') %></h4>
        <div class="author-container">
          <%= image_tag(@workshop.user.profile.avatar.url(:medium),class:'avatar') %>
          <p><%= @workshop.user.profile.description %></p>        
        </div>
      </div>
    <% end %>
   
  </div>
</div>