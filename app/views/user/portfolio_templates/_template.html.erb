<div class="portfolio-buttons-container">
	<%= link_to t('buttons.apply_template'), 
							user_portfolio_template_buy_path(@portfolio_template.id), 
							class:'btn btn-primary', method: :put %>
	<%# link_to t('buttons.view_template'), 
						public_portfolio_index_path(template:@portfolio_template.id, layout_theme:@theme,user_id:@photographer.id), 
						target:"_blank",class:'btn' %>
</div>
<div class="button-group" style="float:right;margin: 4px 30px 0 0;">
	<%= link_to t('buttons.dark'), 
							preview_user_portfolio_templates_path(template:@portfolio_template.id,layout_theme:""), 
							id:"dark-layout", class:"btn #{@theme.blank? ? "selected" : ""}", remote:true %>

	<%= link_to t('buttons.light'),
							preview_user_portfolio_templates_path(template:@portfolio_template.id,layout_theme:"light"),
							id:"light-layout", class:"btn #{@theme == "light" ? "selected" : ""}", remote:true %>
</div>
<div class="portfolio-preview" id="portfolio-layout">
	<%= render "/shared/portfolio_templates/template_#{@portfolio_template.id}/template" %>
</div>
