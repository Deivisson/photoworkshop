<%= content_tag :li, id:"participant-#{@workshop.id}#{participant.user_id}" do %>
  <%= image_tag participant.user.profile.avatar.url(:thumb),class:'user-avatar' %>
  <%= link_to participant.user.profile.user_name,
              user_photographer_path(participant.user_id),
              class:"photographer-profile user-name" %>

  <% if workshop_owner %>
  	<%= link_to t('.confirm_matriculation'),
  							user_workshop_confirm_matriculation_path(@workshop,participant.user_id),
  							method: :put,
  							data: {confirm:t('.confirm_matriculation_question')},
  							remote:true, id:"confirm-matriculation-btn",
  							class:"btn btn-tiny btn-primary" unless participant.confirmed? %>
    
    <div class="buttons-container buttons-container-participants">
    	<%= link_to t('.remove_user'),
    							user_workshop_remove_participant_path(@workshop,participant.user_id),
    							method: :delete,
    							data: {confirm:t('messages.confirm_destroy')},
    							remote:true %>
  <% end %> 
<% end %>