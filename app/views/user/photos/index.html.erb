<%= content_for :toolbar do %>
  <%= content_tag :ul, class:'menu' do %>
    <li>
      <%= link_to t('.profile.me'), "#" %>
    </li>
    <li class="current">
      <%= link_to t('.profile.photos'),"#" %>
    </li>
    <li>
      <%= link_to t('.profile.following'),"#" %>
    </li>
    <li>
      <%= link_to t('.profile.followers'),"#" %>
    </li>
  <% end %>
<% end %>

<%= content_tag :ul, class:'photos-gallery' do %>
  <% @photos.each do |photo| %>
    <li>
    	<%= link_to image_tag(photo.picture.url(:small)),"#" %>
    </li>
  <% end %>
<% end %>
