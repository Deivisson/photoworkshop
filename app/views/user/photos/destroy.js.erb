<% if @photo.destroyed? %>
	<% if @gallary_type.to_sym == :flow  %>
		$("#img-container-<%= @photo.id %>").find("a").remove();
		$("#img-container-<%= @photo.id %>").find(".photo-counts").remove();
		var img = $("#img-container-<%= @photo.id %>").find(".img-pic");
		$(img).css("background-image","");
		$(img).css("background-color","#000");
		$(img).html("<p class='remove-photo-label'><%= t('messages.removed_photo') %></div>");
		flashNoticeMessage("<%= t('messages.destroyed_record') %>");
	<% else %>
		$("#img-container-<%= @photo.id %>").remove();
	<% end %>
<% else %>
	flashNoticeMessage("<%= @photo.errors.full_messages.to_sentence %>");
<% end %>