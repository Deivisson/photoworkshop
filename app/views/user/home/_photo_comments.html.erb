<div class="comment-list-container">
	<ul class="comment-items" id="timeline-comment-photo-<%= photo.id %>">
		<% photo.comments.each do |comment| %>
			<%= render partial:"user/photo_comments/photo_comment", 
								locals:{photo_comment:comment,can_delete:true} %>
		<% end %>
		<li id="form-container-photo-<%= photo.id %>">
			<%= avatar_tag(current_user.profile.avatar(:thumb),class:'user-avatar avatar-rounded') %>
			<div class="text-box">
				<div id="comment-form-photo-<%= photo.id %>" class="comment-form">
					<%= render partial: '/user/photo_comments/form', 
							locals: {photo:photo, submit_button:false, rows_count:1} %>
				</div>
			</div>
		</li>
	</ul>
</div>