<% unless @likes_count.nil? %>

	var idElement;

	// Photo View
	if ($("#likes-count").length > 0) {
		$("#likes-count").text("<%= @likes_count %>");
	}

	if ($("#like-links").length > 0) {
		$("#like-links").html("<%= j(render partial:'user/shared/photo_view/like_links', locals:{photo:@photo, show_label:false}) %>");
	}

	// Photo Gallary and Home Timeline
	idElement = "#photo-gallery-likes-count-<%= @photo.id %>";
	if ($(idElement).length > 0) {
		$(idElement).text("<%= @likes_count %>");
	}

	idElement = "#photo-like-links-<%= @photo.id %>";
	if ($(idElement).length > 0) {
		$(idElement).html("<%= j(render partial:'user/shared/photo_view/like_links',locals:{photo:@photo, show_label:true}) %>");
	}

	// HOme Time line
	idElement = "#timeline-likes-count-<%= @photo.id %>";
	if ($(idElement).length > 0) {
		$(idElement).text("<%= @likes_count %>");
	}
<% end %>