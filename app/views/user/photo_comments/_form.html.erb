<%= semantic_form_for [:user,photo,PhotoComment.new], remote:true do |f| %>
  <%= f.inputs do %>
    <%= f.input :content,
  							:input_html => {
  								rows:rows_count, 
  								placeholder:t('.comment_box_placeholder'),
  								class:"photo-comment-input-text"
								},
  							:label => false %>
  <% end %>
  <%= submit_tag t('buttons.comment'), class:'submit-button' if submit_button %>
<% end %>
