<h1>Listing photo_comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Photo</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photo_comments.each do |photo_comment| %>
      <tr>
        <td><%= photo_comment.user %></td>
        <td><%= photo_comment.photo %></td>
        <td><%= photo_comment.content %></td>
        <td><%= link_to 'Show', photo_comment %></td>
        <td><%= link_to 'Edit', edit_photo_comment_path(photo_comment) %></td>
        <td><%= link_to 'Destroy', photo_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo comment', new_photo_comment_path %>
