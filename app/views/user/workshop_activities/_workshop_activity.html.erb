<%= content_tag :li, id:"activity-#{workshop_activity.id}" do %>
  <%= link_to workshop_activity.description,
      user_workshop_activity_path(@workshop,workshop_activity),
      class:"show-workshop-activity" %>
  <%= content_tag :div, class:"buttons-container" do %>
  	<%= link_to t('buttons.edit'),
  							edit_user_workshop_activity_path(@workshop,workshop_activity),
  							class:"edit-workshop-activity" %>
  	<span class="separator"></span>
  	<%= link_to t('buttons.destroy'),
  							user_workshop_activity_path(@workshop,workshop_activity),
  							method: :delete,
  							data: {confirm:t('messages.confirm_destroy')},
  							remote:true %>
    <span class="separator"></span>
    <%= link_to "view",
              user_workshop_activity_path(@workshop,workshop_activity) %>
  <% end %>
  <div class="progress-container">
    <span>
      <%= pluralize(workshop_activity.delivered_count,t('.post_one'),t('.post_many')) %>
    </span>
    <div class="progress-evolution" 
          style="width: <%= workshop_activity.perc_delivered %>%"></div>
  </div>
<% end %>