<% unless defined?(type) %>
  <%= content_for :toolbar do %>
    <%= content_tag :ul, class:'menu' do %>
      <%= content_tag :li do %>
        <%= link_to  user_photo_explore_path do %>
          <span class="icon20 explore"></span>
          <%= t('user.main_menu.explore') %>
        <% end %>
      <% end %>
      <%= content_tag :li, class:(@current_menu == 'photographers' ? 'current' : '') do %>
        <%= link_to  user_photographers_path do %>
          <span class="icon20 photographers"></span>
          <%= t('user.main_menu.photographers') %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <div id="responsive-menu-container">
    <div class="responsive-menu-overlay" id="responsive-menu-overlay-id">
    </div>
    <ul class="responsive-menu" id="responsive-menu-id">
      <li class="header-menu">
        <%= link_to "#", id:"hide-responsive-menu" do %>
          <span class="icon20pb icon-grid-list"></span>
        <% end %>
      </li>
      <li>
        <%= link_to  user_photo_explore_path do %>
          <span class="icon20pb explore"></span>
          <%= t('user.main_menu.explore') %>
        <% end %>
      </li>
      <li>
        <%= link_to  user_photographers_path do %>
          <span class="icon20pb photographers"></span>
          <%= t('user.main_menu.photographers') %>
        <% end %>
      </li>
    </ul>
  </div>  
<% end %>