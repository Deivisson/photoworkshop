<% if current_user.favorited_photos_ids.include?(photo.id) %> 
  <%= link_to (show_label ? t('buttons.unfavorite') : "") ,
  						user_unfavoritar_photo_path(photo.id),
  						remote:true,class:'unfavorite-photo' %> 
<% else %>
  <%= link_to (show_label ? t('buttons.favorite') : ""),
  						user_favoritar_photo_path(photo.id),
  						remote:true, class:'favorite-photo' %> 
<% end unless current_user.nil?%>
