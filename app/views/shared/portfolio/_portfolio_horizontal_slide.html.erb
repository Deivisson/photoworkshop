<div class="portfolio portfolio-horizontal-slide <%= @theme %>"  id="portfolio-template">
	<div class="header">
		<%= image_tag(@photographer.profile.avatar.url(:medium), class:'avatar') %>
		<div class="text-box">
			<h1><%= @photographer.profile.full_name %></h1>
			<p><%= @photographer.profile.category.description %></p>
		</div>
	</div>
	<div class="container">
		<div class="gallery-content">
			<div class="about">
				<p class="biography">
					<span>Biografia</span>
					<%= @photographer.profile.description %>
				</p>
				<div class="contact-container"><%= render '/shared/portfolio/contacts_link' %></div>
			</div>
			<% @photographer.photos.each do |photo| %>
				<%= content_tag :div,class:"img-pic #{photo.orientation}",
												style:"background-image: url('#{photo.picture.url(:medium)}')" do %>
					<h1><%= photo.title %></h1>
				<% end %>
			<% end %>
		</div>
	</div>
</div>