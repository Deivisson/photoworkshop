<!DOCTYPE html>
<html>
<head>
  <title>Pic2Gether</title>
  <%= stylesheet_link_tag    'user', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'user', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render "/user/shared/toolbar" %>
	<div class="left-col fixed-col" style="position:absolute">
		<%= yield :categories %>
		<%= yield :exif_search %>
		<%= yield :search_form %>
	</div>
	<div class="main-content-area"><%= yield %></div>
	<div class="social-network-box">
		<div id='fb-root'></div>
	</div>
</body>
</html>
