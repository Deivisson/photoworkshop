<!DOCTYPE html>
<html>
<head>
  <title>Photograph</title>
  <%= stylesheet_link_tag    'user', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'user', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
</head>
<body>
	<ul class="toolbar">
		<%= yield :toolbar %>
		<%= content_tag :li, class:'page-title'  do %>
    	<%= yield(:title) %>
		<% end if show_title? %>
		<%= content_tag :li, class:'user-info'  do %>
	    <%= link_to "Logoff",destroy_user_session_path %>
		<% end %>
		<%= yield :toolbar_buttons %>
	</ul>
	<div class="flash_container">
		<%- flash.each do |name, msg| %>
	    <%= content_tag :div, msg, :id => "flash_#{name}" %>
	  <%- end %>
  </div>

	<div class="left-col">
		<div class="top-info">
    	<%= link_to user_home_index_path, class:"home-menu" do %>
    		<span class="icon20 home"></span>
    	<% end %>
			<%= link_to new_user_photo_path, class:"home-menu" do %>
				<span class="icon20 upload"></span>
			<% end %>
		</div>
		<div class="float-container">
			<div class="user-content">
				<%= image_tag(current_user.profile.avatar.url(:medium),class:'avatar') %>
				<%= content_tag :label,class:'user-name' do %>
					<span><%= current_user.profile.user_name %></span>
				<% end %>
				<span class="user-ranking"><%= "97%" %></span>
				<ul class="user-resume">
					<li>
						<%= content_tag :label, t('user.user_resume.photos') %>
						<%= content_tag :span do %>
							<%= link_to current_user.photos_count, user_photos_path %>
						<% end %>
					</li>
					<li>
						<%= content_tag :label, t('user.user_resume.following') %>
						<%= content_tag :span do %> 
							<%= link_to current_user.following_count,
													following_user_photographers_path,
													id:"current-user-following-count" %>
						<% end %>
					</li>
					<li>
						<%= content_tag :label, t('user.user_resume.followers') %>
						<%= content_tag :span do %> 
							<%= link_to current_user.followers_count,followers_user_photographers_path %>
						<% end %>
					</li>												
				</ul>
			</div>
  	</div>
	</div>
	<div class="main-content-area">
		<%= yield %>
	</div>

</body>
</html>
