<!DOCTYPE html>
<html>
<head>
  <title>Photograph</title>
  <%= stylesheet_link_tag    'user', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'user', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
</head>
<body>
	<ul class="toolbar">
		<%= yield :toolbar %>
		<%= content_tag :li, class:'page-title'  do %>
    	<%= yield(:title) %>
		<% end if show_title? %>
		<%= content_tag :li, class:'user-info'  do %>
	    <%= link_to "Logoff",destroy_user_session_path %>
		<% end %>
		<%= link_to "Upload",new_user_photo_path, class:"common-button upload-button" %>
		<%= yield :toolbar_buttons %>
	</ul>
	<div class="left-col">
		<div class="top-info">

		</div>
		<div class="user-content">
			<%= image_tag(current_user.profile.avatar.url(:medium),class:'avatar') %>
			<%= content_tag :label,class:'user-name' do %>
				<span><%= current_user.profile.user_name %></span>
			<% end %>
		</div>

		<!-- Lateral menu -->
	  <%= content_tag :ul, class:'menu' do %>
	    <li><%= link_to t('user.lateral_menu.profile'), user_profile_path(0) ,class:'profile' %></li>
	    <li><%= link_to t('user.lateral_menu.photographers'), user_photographers_path,class:'photographers' %></li>
	    <li><%= link_to t('user.lateral_menu.workshop'), user_workshops_path ,class:'profile' %></li>
  	<% end %>
	</div>
	<div class="main-content-area">
		<%= yield %>
	</div>

</body>
</html>
