<h2><%= t('home.account.forgot_password')%></h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field">
	  <%= f.email_field :email,
	  									placeholder: t('home.account.email_forgot_password'),autofocus: true %>
	</div>

  <div>
  	<%= f.submit t('home.account.submit_reset_password'),
			class:'btn btn-submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
